        android:pivotY="50%"
        android:pivotX="50%"
        android:fromXScale="0"
        android:fromYScale="0"
        android:toXScale="1"
        android:toYScale="1"
        android:duration="300"/>
    <alpha
        android:toAlpha="0.0"
        android:fromAlpha="1.0"
        android:duration="300">
    </alpha>
    <translate
        android:fromXDelta="0"
        android:fromYDelta="0"
        android:toXDelta="-250"
        android:toYDelta="-250"
        android:duration="300">
    </translate>
    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0.0"
        android:startOffset="230"
        android:duration="70">
    </alpha>
</set>