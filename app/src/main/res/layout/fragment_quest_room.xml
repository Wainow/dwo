<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestRoom"
    android:id="@+id/First4Fragment"
    android:background="@color/colorPrimaryPurpleDark"
    android:layout_marginBottom="70dp">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/quest_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/fragment_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryPurple"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/fragment_close"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/close"
                    android:background="@color/colorPrimaryPurple"/>
                <com.example.dwo.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quest_title"
                    android:maxLines="1"
                    android:layout_marginLeft="50dp"
                    app:customFont="fonts/DMSerifText-Regular.ttf"
                    android:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitle"
                    android:textColor="@color/colorWhite"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/quest_appbar">
        <com.example.dwo.EditTextPlus
            android:id="@+id/quest_story"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:padding="7dp"
           android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            app:customFont1="fonts/DMSerifText-Italic.ttf"
            android:background="@drawable/cloud_background_purple_squared"
            android:hint="Write here your quest history" />
        <View
            android:id="@+id/quest_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/quest_story"
            android:background="@color/colorReallyBlack"/>
        <com.example.dwo.EditTextPlus
            android:layout_width="wrap_content"
            android:editable="false"
            android:layout_height="wrap_content"
            android:layout_below="@id/quest_line"
            android:padding="7dp"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/quest_description"
            android:layout_margin="10dp"
            app:customFont1="fonts/DMSerifText-Italic.ttf"
            android:textColor="@color/colorWhite"
            android:background="@drawable/cloud_background_squared"
            android:text="NO"/>
    </RelativeLayout>
</RelativeLayout>