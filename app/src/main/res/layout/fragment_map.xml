<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapFragment"
    android:background="@color/colorWhite">
    <com.launcher.dwo.Custom.DrawingView
        android:id="@+id/DrawingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageButton
        android:layout_alignParentRight="true"
        android:src="@drawable/circle"
        android:scaleType="fitCenter"
        android:padding="25dp"
        android:tint="#000000"
        android:background="@drawable/round_button"
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/fab_brush_size"
        android:layout_width="55dp"
        android:layout_height="55dp"/>
    <ImageButton
        android:id="@+id/fab_brush_color"
        android:layout_toLeftOf="@id/fab_brush_size"
        android:layout_width="55dp"
        android:padding="15dp"
        android:tint="#000000"
        android:layout_height="55dp"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/palette"
        android:scaleType="fitCenter"
        android:background="@drawable/round_button" />
    <ImageButton
        android:id="@+id/fab_background_color"
        android:layout_toLeftOf="@id/fab_brush_color"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="@dimen/fab_margin"
        android:tint="#000000"
        android:padding="15dp"
        android:src="@drawable/texture"
        android:scaleType="fitCenter"
        android:background="@drawable/round_button" />
    <ImageButton
        android:id="@+id/fab_lock"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="@dimen/fab_margin"
        android:tint="#000000"
        android:padding="15dp"
        android:src="@drawable/unlock"
        android:scaleType="fitCenter"
        android:background="@drawable/round_button" />
</RelativeLayout>