<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="#33241f">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#800020"
        android:layout_marginTop="20dp"
        android:id="@+id/shadow_rolling"
        android:layout_marginLeft="88dp"
        android:typeface="serif"
        android:textSize="60dp"
        android:text="Rolling"
        android:textStyle="italic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:textSize="60dp"
        android:layout_marginLeft="85dp"
        android:text="Rolling"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:shadowColor="@color/colorAccent"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_banner_foreground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:id="@+id/icon_roll"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="50dp"
        android:textColor="#121212"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/start_number" />
    <TextView
        android:visibility="invisible"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="        "
        android:textSize="10dp"
        android:textColor="#121212"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:id="@+id/start_number_fake" />
    <ImageView
        android:visibility="invisible"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:id="@+id/circle_white"/>
    <ImageView
        android:visibility="invisible"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:id="@+id/circe_alpha"/>
    <TextView
        android:visibility="invisible"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="80dp"
        android:background="@drawable/cloud_background"
        android:id="@+id/roll_text"
        android:text="The program is developing right now"
        android:textSize="30dp"
        android:padding="15dp"
        android:textStyle="italic"
        android:typeface="serif"/>
</RelativeLayout>