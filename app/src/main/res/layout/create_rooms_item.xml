<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPurpleDark"
    android:orientation="horizontal"
    android:paddingBottom="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryPurpleDark">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="-100dp"
            android:src="@drawable/mini_knight"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"/>
        <com.launcher.dwo.Custom.TextViewPlus
            android:layout_toRightOf="@id/circle_image"
            android:padding="3dp"
            android:textSize="14dp"
            android:id="@+id/text_item"
            android:text="Elcaspio [Knight]"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customFont="fonts/Righteous-Regular.ttf"/>
        <TextView
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_item2"
            android:layout_toRightOf="@id/circle_image"
            android:layout_below="@id/text_item"
            android:maxLines="1"
            android:text="Heath: 100, Strength 7, Agility 9, Intelligence 5 ..."
            android:textColor="@color/colorGray"/>
        <TextView
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_item3"
            android:layout_toRightOf="@id/circle_image"
            android:layout_below="@id/text_item2"
            android:maxLines="1"
            android:text="Inventory: Armor, 250 Money, Bottle of Brown Water ..."
            android:textColor="@color/colorGray"
            android:textStyle="italic"/>
    </RelativeLayout>
</RelativeLayout>